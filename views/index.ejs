<!DOCTYPE html>
<html lang="en" dir="ltr">
  <head>
    <meta charset="utf-8">
<meta name="viewport" content="width=device-width, initial-scale=1">
<meta name="description" content="">
<meta name="author" content="Mark Otto, Jacob Thornton, and Bootstrap contributors">
<meta name="generator" content="Hugo 0.101.0">
    <title></title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/css/bootstrap.min.css">
    <link rel="stylesheet" href="styles.css">
  </head>
  <body>
    <section class="vh-100 gradient-custom">
        <div class="container py-5 h-100">
         <div class="row d-flex justify-content-center align-items-center h-100">
           <div class="card">
                      <div class="card-body p-5 col-sm-12 lg-12 md-8">
                        <div class="d-flex justify-content-center align-items-center mb-4" id="heading">
                           <h1 class="heading"> <em>Url Shortener</em> </h1>
                        </div>

                       <form class="d-flex justify-content-center align-items-center mb-4" action="/shortUrls" method="post">
                         <div class="form-outline flex-fill">
                         <input autocomplete="off"id="form2"placeholder="Enter url"type="url" name="fullUrl" value="" class="form-control">
                       </div>
                         <button class="btn btn-success ms-2" type="submit" name="button">compress</button>
                       </form>
                       <div class="tab-content" id="ex1-content">
                                 <div class="tab-pane fade show active" id="ex1-tabs-1" role="tabpanel"
                                   aria-labelledby="ex1-tab-1">
                                   <div class="table-responsive-sm">
                                   <table class="table table-striped table-responsive-sm table-light">
               <thead>
                 <tr>

                   <th >Full URL</th>
                   <th >Short URL</th>
                   <th >Clicks</th>
                 </tr>
               </thead>
               <tbody>
                 <%  Array.from(shortUrls).forEach(function(shortUrl){ %>
                    <form class="" action="/delete" method="post">
                   <tr>

                     <td><input autocomplete="off "value="<%= shortUrl._id%>"  onChange="this.form.submit()" class="form-check-input me-2" name="checkbox" type="checkbox"  aria-label="..."  /><a href="<%= shortUrl.full %>"><%= shortUrl.full %></a></td>
                     <td class="link"> <a class="link" href="<%= shortUrl.short %>"><%= shortUrl.short %></a> </td>
                     <td> <%= shortUrl.clicks%> </td>
                   </tr>
                 </form>
                    <%    }) %>

               </tbody>
             </table>
           </div>
                     </div>
                   </div>

           </div>
           </div>
           </div>

       </div>
    </section>
  </body>
</html>
